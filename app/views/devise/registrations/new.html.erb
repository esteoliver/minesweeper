<div class="row d-flex justify-content-center">
  <div class="col-5 p-1 window">
    <div class="title-bar">
      <div class="title-bar-text">Minesweeper - The greatest game!</div>
      <div class="title-bar-controls">
        <button aria-label="Minimize"></button>
        <button aria-label="Maximize"></button>
        <button aria-label="Close"></button>
      </div>
    </div>

    <div class="window-body to-content p-4">
      <h3 class="my-0">Sign Up</h3>
      <hr>

      <%= form_for(resource, as: resource_name, 
                             url: registration_path(resource_name),
                             html: { class: 'd-flex flex-column py-4' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, autofocus: true %>
        </div>

        <div class="field mb-4">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.button "Sign up", type: :submit %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
